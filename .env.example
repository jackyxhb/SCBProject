# Frontend
VITE_API_BASE=/api

# Backend
PORT=3000
VERCEL_URL=http://localhost:5173
# On Vercel, VERCEL_URL is like my-app.vercel.app (no scheme). Set CORS_ORIGIN to https://your-domain if needed.
CORS_ORIGIN=
# Optional: Persist QR RSA keys (PEM). If blank, keys are generated in-memory per process
QR_PUBLIC_KEY=
QR_PRIVATE_KEY=
QR_PERSIST_KEYS=0
QR_KEY_DIR=.keys
QR_PUBLIC_KEY_FILE=
QR_PRIVATE_KEY_FILE=
# Firebase Admin example (do not commit real secrets)
FIREBASE_PROJECT_ID=
FIREBASE_CLIENT_EMAIL=
FIREBASE_PRIVATE_KEY=
USE_FIRESTORE=0
# Notifications
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM=
SMTP_URL=
SMTP_FROM=

# Admin tasks
ADMIN_TASK_TOKEN=

# Auth
REQUIRE_AUTH=0

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
RATE_LIMIT_QR_MAX=
RATE_LIMIT_NOTIFY_MAX=
